{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "run-vite-server",
            "command": "npm",
            "args": [
                "run",
                "dev"
            ],
            "type": "shell",
            "promptOnClose": false,
            "isBackground": true,
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".*vite.*",
                        "endsPattern": "(.*press h \\+ enter to show help.*)"
                    }
                }
            ]
        }
    ]
}